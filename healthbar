using System;

namespace HealtBar
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int health = 80;
            int lenght = 20;
            int mana = 35;
            string healthSymbol = "H";
            string emptySymbol = "_";
            string manaSymbol = "M";

            DrawBar(health, lenght, healthSymbol, emptySymbol);
            DrawBar(mana, lenght, manaSymbol, emptySymbol);
        }

        static void DrawBar(int health, int lenght, string symbolHealth, string emptySymbol)
        {
            int maxPercent = 100;
            string startSymbol = "[";
            string endSymbol = "]";

            if (health > maxPercent)
            {
                health = maxPercent;
            }

            int filledCell = (health * lenght) / maxPercent;
            string bar = FillBar(filledCell, symbolHealth);
            bar += FillBar(lenght - filledCell, emptySymbol);
            Console.WriteLine($"{startSymbol}{bar}{endSymbol}");
        }

        static string FillBar(int value, string symbolsInBar)
        {
            string bar = "";

            for (int i = 0; i < value; i++)
            {
                bar += symbolsInBar;
            }

            return bar;
        }    

    }
}
