using System;

namespace ConsoleApp46
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int stepCycle = 2;
            int startCycle = 1;
            int degreeСounter = 0;
            int minRandom = 0;
            int digit;
            
            Console.Write("Введите максимальное значение диапазона случайного числа = ");
            int maxRandom = Convert.ToInt32(Console.ReadLine());
            
            Random random = new Random();
            digit = random.Next(minRandom, maxRandom);
            Console.WriteLine($"Случайное число {digit}");
            int maxCycleValue = digit + digit;

            for (int i = startCycle; i < maxCycleValue; i = i * stepCycle)          
            {
                if (i < maxCycleValue)
                {
                    Console.WriteLine($"квадрат двойки равен = {i} степень 2 = {degreeСounter}");
                    degreeСounter++;
                }
            }
        }
    }
}
