using System;
using System.Security.Policy;

namespace ConsoleApp33
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string firstMenuItem = "1";
            string secondMenuItem = "2";
            string threeMenuItem = "3";
            string fourthMenuItem = "4";
            string fifthMenuItem = "5";
            string sixthMenuItem = "6"; 
            string commandExit = "exit";
            string colorConsole;
            string userInput = "0";
            string userName = "User";
            string inputPassword = "1234";

            Console.WriteLine($"Выберите пункт и введите в консоль. Для выхода введите {commandExit}");
            Console.WriteLine("Меню");
            Console.WriteLine($"{firstMenuItem}. Установите имя ");
            Console.WriteLine($"{secondMenuItem}. Изменить цвет консоли ");
            Console.WriteLine($"{threeMenuItem}. Установить пароль ");
            Console.WriteLine($"{fourthMenuItem}. Вывести имя Пользователя после ввода пароля");
            Console.WriteLine($"{fifthMenuItem}. Вывести на экран случайное число ");
            Console.WriteLine($"{sixthMenuItem}. Очистить консоль");  
                        
            while (userInput != commandExit)
            {
                Console.Write("Введите пункт меню = ");
                userInput = Console.ReadLine();

                if (userInput == firstMenuItem)
                {
                    Console.Write($"Введите имя пользователя иля для выхода введите {commandExit} =");
                    userName = Console.ReadLine();
                    
                    if (userName != commandExit)
                    {
                        Console.WriteLine("Имя пользователя " + userName);
                    }
                    else if (userName == commandExit)
                    {
                        Console.WriteLine("Имя пользователя не ввели, выход");
                    }
                }
                else if (userInput == secondMenuItem)   
                {
                    Console.Write($"Введите цвет Синий, Зеленый или красный для выхода введите {commandExit} = ");
                    colorConsole = Console.ReadLine();
                    
                    if (colorConsole == "Зеленый")
                    {
                        Console.ForegroundColor = ConsoleColor.Green;
                    }
                    else if (colorConsole == "Синий")
                    {
                        Console.ForegroundColor = ConsoleColor.Blue;
                    }
                    else if (colorConsole == "Красный")
                    {
                        Console.ForegroundColor = ConsoleColor.Red;
                    }
                    else if (colorConsole == commandExit)
                    {
                        Console.WriteLine("Выход");
                    }
                }
                else if (userInput == threeMenuItem)
                {
                    Console.Write($"Установите пароль для выхода введите {commandExit} = ");
                    inputPassword = Console.ReadLine();
                    Console.WriteLine("Пароль установлен");
                }
                else if (userInput == fourthMenuItem) 
                { 
                    Console.WriteLine("Вывести имя пользователя после ввода пароля ");
                    Console.Write("Введите паролль = ");
                    string inputPasswordTwo = Console.ReadLine();

                    if (inputPasswordTwo == inputPassword)
                    {
                        Console.WriteLine("Имя пользователя = " + userName);
                    }
                    else
                    {
                        Console.WriteLine("Пароль не верный");
                    }
                }
                else if (userInput == fifthMenuItem) 
                {
                    Console.WriteLine("Вывести на экран случайное число");
                    Random random = new Random();  
                    int value = random.Next();
                    Console.WriteLine("Случайное число = " + value);
                }
                else if (userInput == sixthMenuItem)
                {
                    Console.Clear();
                }
                else if (userInput == commandExit)
                {
                    Console.WriteLine("Вышли из меню.");
                }
            }
        }
    }
}
 
