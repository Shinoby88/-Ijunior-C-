using System;
using System.Collections.Generic;
using System.Linq;
using System.Reflection.Emit;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp22
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int firstDivisor = 3;
            int secondDivisor = 5;
            int firstRandomCount = 1;
            int lastRandomCount = 101;

            Random random = new Random();
            int count = random.Next(firstRandomCount, lastRandomCount);

            Console.WriteLine("Случайно сгенерированное число: " + count);

            int amount = 0;

            for (int i = 1; i <= count; i++)
            {
                if (i % firstDivisor == 0 || i % secondDivisor == 0)
                {
                    amount += i;
                }
            }
            Console.WriteLine("Сумма всех положительных чисел меньше " + count + ", кратных 3 или 5: " + amount);
        }
    }
}
