using System;
using System.Collections.Generic;
using System.Linq;
using System.Reflection.Emit;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp22
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int firstDivisor = 3; int secondDivisor = 5;
            int firstRandomNumber = 1; int lastRandomNumber = 101; 
            
            Random random = new Random();
            int number = random.Next(firstRandomNumber, lastRandomNumber);

            Console.WriteLine("Случайно сгенерированное число: " + number);

            int theAmount = 0;
            for (int i = 1; i <= number; i++)
            {
                if (i % firstDivisor == 0 || i % secondDivisor == 0)
                {
                    theAmount += i;
                }
            }

            Console.WriteLine("Сумма всех положительных чисел меньше " + number + ", кратных 3 или 5: " +theAmount);


        }
    }
}
