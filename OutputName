using System;
namespace ConsoleApp7
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int cycleStart = 0;
            char frameSymbol = '*';
            Console.Write("Введите имя пользователя = ");
            string userName = Console.ReadLine();
            string userNameOne = frameSymbol + userName + frameSymbol;
            int lineLength = userNameOne.Length;

            for (int i = cycleStart; i < lineLength; i++)
            {
                Console.Write(frameSymbol);
            }

            Console.Write("\n");
            Console.Write(userNameOne);
            Console.Write("\n");

            for (int i = cycleStart; i < lineLength; i++)
            {
                Console.Write(frameSymbol);
            }
            Console.Write("\n");
        }
    }
}
