using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp20
{
    internal class Program
    {
        static void Main(string[] args)
        {
            while (true)
            {
                Console.Write("Введите слово: ");
                string userInput = Console.ReadLine();

                if (userInput == "exit")
                {
                    break;
                }
            }
        }
    }
}
